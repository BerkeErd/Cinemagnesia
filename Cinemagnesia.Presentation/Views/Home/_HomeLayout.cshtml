@using Cinemagnesia.Presentation.Areas.Admin.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<GenreViewModel>



<div class="container-fluid">

   <div class="row">
       <div class="col-lg-3 col-md-3">
            <div class="list-group sidebar ">
                <h5 class=" text-white"><i class="fa-solid fa-ellipsis"></i></i> Kategoriler </h5>
                <div class="list-group-item sidecheck">
                    @foreach (var genre in Model)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="@genre.Name" id="@genre.Id" />
                            <label class="form-check-label" for="genre.Id">
                                @genre.Name
                            </label>
                        </div>
                    }
                   
                   
                </div>
                <h5 class="  text-white"><i class="fa-solid fa-heart"></i> En Yüksek Puanlılar </h5>
                <div class="list-group-item">
                    <ul class="list-group">
                        <li class="list-group-item"><a>Deadpool</a></li>
                        <li class="list-group-item"><a>Piyanist</a></li>
                        <li class="list-group-item"><a>Yenilmezler</a></li>
                    </ul>



                </div>
                <h5 class=" text-white"><i class="fa-solid fa-comment"></i> En Çok Yorumlananlar </h5>
                <div class="list-group-item">
                    <ul class="list-group">
                        <li class="list-group-item"><a>Deadpool</a></li>
                        <li class="list-group-item"><a>Piyanist</a></li>
                        <li class="list-group-item"><a>Yenilmezler</a></li>
                    </ul>
                </div>
            </div>
       
       </div>
       <div class="col-lg-9 col-md-9">
            <div class="row">
                <div class="col-lg-5 ">
                    <div id="myCarousel" class="carousel slide carousel-fade img-fluid" data-ride="carousel" data-interval="120000">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                            <li data-target="#myCarousel" data-slide-to="3"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item crsImg active">
                                <iframe class="d-block w-100" src="https://www.youtube.com/embed/vVJeYMRam0o?autoplay=1" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                            </div>
                            <div class="carousel-item  crsImg">
                                <img src="~/images/Cinemagnesia/avengers.jpg" class="d-block w-100" alt="Slide 1">
                            </div>
                            <div class="carousel-item crsImg">
                                <img src="~/images/Cinemagnesia/familyguy.jpg" class="d-block w-100" alt="Slide 2">
                            </div>
                            <div class="carousel-item crsImg">
                                <img src="~/images/Cinemagnesia/starwars1.jpg" class="d-block w-100" alt="Slide 3">
                            </div>
                           
                        </div>
                        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="row ">
                        <div class="col-lg-12 col-md-12 ">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h4 class="homeMovieHeader">Popüler Filmler</h4>
                                </div>
                            </div>
                            <div class="row homecards mt-1">
                                <div class="col-lg-3 col-sm-6">
                                    <div class="card">
                                        <div class="card-body justify-content-center text-center">
                                            <h5 class="card-title">Deadpool</h5>
                                            <div class="populerFilmDiv">
                                                <img src="/images/Cinemagnesia/deadpool.png" />
                                            </div>
                                            <div class="row">
                                                <div class="col-12 d-flex justify-content-center">
                                                    <button class="btn btn-sm mt-2 wTrailer">Watch Trailer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6">
                                    <div class="card">
                                        <div class="card-body justify-content-center text-center">
                                            <h5 class="card-title">Joker</h5>
                                            <div class="populerFilmDiv img-fluid">
                                                <img src="/images/Cinemagnesia/joker.png" />
                                            </div>
                                            <div class="row">
                                                <div class="col-12 d-flex justify-content-center">
                                                    <button class="btn btn-sm mt-2 wTrailer">Watch Trailer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6">
                                    <div class="card">
                                        <div class="card-body justify-content-center text-center">
                                            <h5 class="card-title">Interstellar</h5>
                                            <div class="populerFilmDiv">
                                                <img src="/images/Cinemagnesia/interstellar.jpg" />
                                            </div>
                                            <div class="row">
                                                <div class="col-12 d-flex justify-content-center">
                                                    <button class="btn btn-sm mt-2 wTrailer">Watch Trailer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6">
                                    <div class="card">
                                        <div class="card-body justify-content-center text-center">
                                            <h5 class="card-title">Fury</h5>
                                            <div class="populerFilmDiv">
                                                <img src="/images/Cinemagnesia/fury.jpg" />
                                            </div>
                                            <div class="row">
                                                <div class="col-12 d-flex justify-content-center">
                                                    <button class="btn btn-sm mt-2 wTrailer">Watch Trailer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
            <div class="row mt-4">
                <div class="col-lg-12 col-md-12 px-0">
                    @RenderBody();
                </div>
            </div>
       </div>
   </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>

<script src="~/js/homeMovie.js"></script>