@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="~/css/WatchList.css" />
</head>


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">


            <div class="row">
                <div class="col-lg-3 col-md-3">

                    @*sidebar start*@
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ProfileView" asp-controller="WatchList">İzleyici Profili</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="FavoriteMoviesView" asp-controller="WatchList">Favori Filmlerim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="WatchListView" asp-controller="WatchList">Listelerim</a>
                        </li>
                    </ul>

                    @*sidebar end*@

                </div>
                <div class="col-lg-9 col-md-9">
                    @RenderBody()
                </div>
            </div>


        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.10/dist/sweetalert2.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)