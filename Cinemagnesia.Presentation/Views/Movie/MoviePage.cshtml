@model MovieViewModel
@{
    ViewBag.Title = "Movie Details";
}
<script src="https://cdn.tiny.cloud/1/3wjvpyjjmza9aahw76uwfh57h5kzsy1gv23kjg2b5oexaz37/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<link href="https://cdn.tiny.cloud/1/3wjvpyjjmza9aahw76uwfh57h5kzsy1gv23kjg2b5oexaz37/tinymce/5/skins/ui/oxide/skin.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="https://tr.web.img4.acsta.net/pictures/bzp/01/27070.jpg" class="img-fluid" alt="Movie Cover Picture">
        </div>
        <div class="col-md-6">
            <h2>Yüzüklerin Efendisi</h2>
            <p><strong>Director:</strong> Yönetmen</p>
            <p><strong>Genre:</strong> Bilim-Kurgu, Aksiyon, Macera</p>
            <p><strong>Length:</strong> 93 Dakika</p>
            <div class="stars">
                <i class="bi bi-star-fill"></i> 9.3 / 10 (This Website)
            </div>
            <div class="d-flex flex-column mb-3">
                <span class="text-muted">IMDb Rating</span>
                <span class="fs-4">8.9 <i class="bi bi-star"></i></span>
            </div>
            <div class="mb-3">
                <label for="movie-description" class="form-label">Description:</label>
                <p id="movie-description">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis euismod est vel leo vestibulum elementum. Nulla facilisi. Sed ac nisl diam. Suspendisse potenti. Praesent imperdiet ullamcorper libero in aliquam. Nam eu sagittis lacus, vel pharetra orci.</p>
            </div>
            <div class="mb-3">
                <label for="cast-members" class="form-label">Cast:</label>
                <p id="cast-members">Cast Member 1, Cast Member 2, Cast Member 3, Cast Member 4</p>
            </div>
            <div class="mb-3">
                <label for="movie-trailer" class="form-label">Trailer:</label>
                <div class="ratio ratio-16x9">
                    <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ" title="Movie Trailer" allowfullscreen></iframe>
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-between">
                <button type="button" class="btn btn-danger"><i class="bi bi-heart"></i> Add to Favorites</button>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="movie-status-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        None
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="movie-status-dropdown">
                        <li><a class="dropdown-item" href="#">Watched</a></li>
                        <li><a class="dropdown-item" href="#">Want to Watch</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <h3>Yorumlar:</h3>
            <ul class="list-unstyled">
                <li>
                    <div class="d-flex">
                        <div class="me-3">
                            <img src="profil_foto_url" alt="Profil Fotoğrafı" width="50" height="50" class="rounded-circle">
                        </div>
                        <div class="flex-grow-1">
                            <p><strong>Kullanıcı 1:</strong> Bu film harika! Çok sevdim.</p>
                            <button class="btn btn-sm btn-secondary" data-toggle="tooltip" data-placement="top" title="Yorumu Gör">
                                Yorumu Gör
                            </button>
                            <div class="mt-2 blur">
                                <p>Bu film gerçekten harikaydı! Son sahne beni hala etkisi altında bırakıyor. Kesinlikle tavsiye ederim!</p>
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="d-flex">
                        <div class="me-3">
                            <img src="profil_foto_url" alt="Profil Fotoğrafı" width="50" height="50" class="rounded-circle">
                        </div>
                        <div class="flex-grow-1">
                            <p><strong>Kullanıcı 2:</strong> Bu film bana göre değildi, pek beğenmedim.</p>
                            <button class="btn btn-sm btn-secondary" data-toggle="tooltip" data-placement="top" title="Yorumu Gör">
                                Yorumu Gör
                            </button>
                            <div class="mt-2 blur">
                                <p>Bu film hakkında bir şeyler söylemek istemiyorum çünkü spoiler vermek istemem. Ama birçok insanın beğendiğini biliyorum.</p>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'autoresize link emoticons',
            toolbar: 'undo redo | bold italic underline | emoticons link',
            height: 200,
            autoresize_bottom_margin: 15
        });
</script>
}
