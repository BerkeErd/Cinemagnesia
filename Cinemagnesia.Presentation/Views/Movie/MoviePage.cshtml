@model MovieViewModel
@{
    ViewBag.Title = "Movie Details";
}
<script src="https://cdn.tiny.cloud/1/3wjvpyjjmza9aahw76uwfh57h5kzsy1gv23kjg2b5oexaz37/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<link href="https://cdn.tiny.cloud/1/3wjvpyjjmza9aahw76uwfh57h5kzsy1gv23kjg2b5oexaz37/tinymce/5/skins/ui/oxide/skin.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <iframe width="100%" height="315" src="https://www.youtube.com/embed/dQw4w9WgXcQ" title="Movie Trailer" frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="col-md-6">
            <h2>Yüzüklerin Efendisi</h2>
            <p>Bu filmin açıklaması buraya yazılacak.</p>
            <p><strong>Director:</strong> Yönetmen</p>
            <p><strong>Genre:</strong> Bilim-Kurgu, Aksiyon, Macera</p>
            <p><strong>Length:</strong> 93 Dakika</p>
            <div class="stars">
                <i class="bi bi-star-fill"></i> 9.2
            </div>
            <div class="form-group">
                <label for="comment">Yorum Bırak:</label>
                <textarea class="form-control" id="comment" rows="3"></textarea>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="has-spoiler">
                <label class="form-check-label" for="has-spoiler">Spoilers İçerir</label>
            </div>
            <button type="button" class="btn btn-link"><i class="bi bi-heart"></i> Favorilere Ekle</button>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Durum: None
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Watched</a>
                    <a class="dropdown-item" href="#">Want to Watch</a>
                </div>
            </div>
            <div class="ratings">
                <div class="rating-item">
                    <i class="bi bi-star"></i> 4.8
                </div>
                <div class="rating-item">
                    <span class="text-muted">IMDB:</span> <i class="bi bi-star"></i> 9.3
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Yorumlar:</h3>
            <ul class="list-unstyled">
                <li>
                    <p><strong>Kullanıcı 1:</strong> Bu film harika! Çok sevdim.</p>
                </li>
                <li>
                    <p><strong>Kullanıcı 2:</strong> Bu film bana göre değildi, pek beğenmedim.</p>
                </li>
            </ul>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'autoresize link emoticons',
            toolbar: 'undo redo | bold italic underline | emoticons link',
            height: 200,
            autoresize_bottom_margin: 15
        });
</script>
}
