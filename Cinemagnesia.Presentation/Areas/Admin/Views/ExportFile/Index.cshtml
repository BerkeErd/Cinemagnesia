@model Cinemagnesia.Presentation.Areas.Admin.Models.ExportViewModel
<div class="container mt-4">
  <h1>Dosya Çıktısı Sayfası</h1>
  <hr />

  <form>
    <div class="form-group">
      <label for="dosyaFormati">Dosya Formatı:</label>
      <select id="dosyaFormati" class="form-control" onchange="toggleCheckboxes()">
        <option value="">Seçiniz</option>
        <option value="film">PDF</option>
        <option value="yapimci">Excel</option>
      </select>
    </div>

    <div class="form-group form-check">
      <input type="checkbox" class="form-check-input" id="filmCheckbox" onchange="toggleFilmDropdown()">
      <label class="form-check-label" for="filmCheckbox">Film seç</label>
    </div>

    <div class="form-group" id="filmDropdownDiv" style="display:none;">
      <label for="filmler">Filmler:</label>
      <select id="filmler" class="form-control">
          @foreach(var movie in ViewBag.model.movies)
          {
              <option value="@movie.Id">@movie.Title</option>
          }
      </select>
    </div>

    <div class="form-group form-check">
      <input type="checkbox" class="form-check-input" id="yapimciCheckbox" onchange="toggleYapimciDropdown()">
      <label class="form-check-label" for="yapimciCheckbox">Yapımcı seç</label>
    </div>
    <div class="form-group" id="yapimciDropdownDiv" style="display:none;">
      <label for="yapimcilar">Yapımcılar:</label>
      <select id="yapimcilar" class="form-control">
        <option value="">Seçiniz</option>
        <option value="yapimci1">Yapımcı 1</option>
        <option value="yapimci2">Yapımcı 2</option>
        <option value="yapimci3">Yapımcı 3</option>
      </select>
    </div>


    <button type="submit" class="btn btn-primary">İndir</button>
  </form>
</div>

@section scripts
{
    <script>
        function toggleCheckboxes() {
  var dosyaFormati = document.getElementById("dosyaFormati").value;
  var filmDropdownDiv = document.getElementById("filmDropdownDiv");
  var yapimciDropdownDiv = document.getElementById("yapimciDropdownDiv");


}
var filmCheckbox = document.getElementById("filmCheckbox");
var filmDropdownDiv = document.getElementById("filmDropdownDiv");
var yapimciCheckbox = document.getElementById("yapimciCheckbox");
var yapimciDropdownDiv = document.getElementById("yapimciDropdownDiv");

function toggleFilmDropdown() {


  if (filmCheckbox.checked) {
    yapimciCheckbox.checked = false;

    filmDropdownDiv.style.display = "block";
     yapimciDropdownDiv.style.display = "none";
  } else {
    filmDropdownDiv.style.display = "none";
  }
}

function toggleYapimciDropdown() {
  if (yapimciCheckbox.checked) {
    filmCheckbox.checked = false;
    yapimciDropdownDiv.style.display = "block";
    filmDropdownDiv.style.display = "none";
  } else {
    yapimciDropdownDiv.style.display = "none";
  }
}

    </script>
}